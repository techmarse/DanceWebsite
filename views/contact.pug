extends base.pug

block scripts
  script(src='/static/index.js')

block style 
    style
        include ../static/style.css
        include ../static/stylecontact.css

block content
        h1 Contact Us
        form(action="/contact" method="post")
          form(action='/' method='post')
            label(for='name') Enter your Name
            input#name(type='text' name='name' placeholder='Enter your name')
            label(for='email') Enter your Email
            input#email(type='email' name='email' placeholder='Enter your email')
            label(for='phoneno') Enter your Phone NO.
            input#phoneno(type='number' name='phoneno' placeholder='Enter your Phone NO.')
            label(for='address') Enter your Address
            textarea#address(name='address' cols='30' rows='10' placeholder='Enter your address')
            button.btn Submit

